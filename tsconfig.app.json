{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "esnext",
        "types": ["vite/client"],
        "useDefineForClassFields": true,
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules",
    "src/preact/*.ts", "src/preact/*.tsx", "src/preact/**/*.ts", "src/preact/**/*.tsx",
    "src/lit/*.ts",  "src/lit/**/*.ts",
    "src/svelte/*.ts", "src/svelte/*.svelte", "src/svelte/**/*.ts", "src/svelte/**/*.svelte",
    "src/solid/*.ts", "src/solid/*.tsx", "src/solid/**/*.ts", "src/solid/**/*.tsx",
    ],
    "include": ["src/*.ts",
    "src/react/*.ts", "src/react/*.tsx", "src/react/**/*.ts", "src/react/**/*.tsx",
    "src/vue/**/*.ts", "src/vue/**/*.vue", "src/vue/*.ts", "src/vue/*.vue",
    "src/pure/**/*.ts", "src/action/*.ts", "src/shared/**/*.ts",
    "legacy/*.ts"    ]
}
