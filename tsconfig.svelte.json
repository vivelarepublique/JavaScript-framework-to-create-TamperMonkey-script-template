{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "composite": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src/svelte/**/*.ts", "src/svelte/**/*.svelte", "src/declaration/*.d.ts", "src/common/**/*.ts"]
}
